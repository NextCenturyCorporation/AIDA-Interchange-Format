@prefix : <https://tac.nist.gov/tracks/SM-KBP/2018/ontologies/InterchangeOntology#> .
@prefix aidaDomainCommon: <https://tac.nist.gov/tracks/SM-KBP/2018/ontologies/AidaDomainOntologiesCommon#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

<https://tac.nist.gov/tracks/SM-KBP/2018/ontologies/InterchangeOntology> rdf:type owl:Ontology ;
    rdfs:label "AIDA Interchange Format Ontology"^^xsd:string ;
    rdfs:comment "This ontology is designed to represent information exchanged between TA1, TA2 and TA3 in the AIDA program"^^xsd:string ;
    owl:versionInfo "Version 1.0"^^xsd:string .


#################################################################
#    Classes
#################################################################

########## Data Representation Classes ##########

:Entity a owl:Class ;
   rdfs:label "Entity" ;
   rdfs:definition "An entity in an AIDA KB, such as a person, organization, etc." .

:Event a owl:Class ;
   rdfs:label "Event" ;
   rdfs:definition "An event in an AIDA KB" .

:Relation a owl:Class ;
   rdfs:label "Relation" ;
   rdfs:definition "An relation in an AIDA KB" .

:SameAsCluster a owl:Class ;
   rdfs:label "Same-As Cluster";
   rdfs:definition "Represents a collection of events or entities which may in fact be the same".

:ClusterMember a owl:Class ;
   rdfs:label "Cluster Member" ;
   rdfs:definition "Represents the claim that an entity or event is the same as the prototype of a cluster".

:Subgraph a owl:Class ;
   rdfs:label "Sub-graph" ;
   rdfs:definition "A collection of entities, events, relations, sentiment assertions, and RDF statements about these".

:Hypothesis a owl:Class ;
    rdfs:label "Hypothesis" ;
    skos:definition "Represents a hypothesis, which consists of a collection of entities, events, relations, sentiment assertions, and RDF statements about these." ;
    skos:note "All elements linked to a hypothesis are assumed to be conjoined" .

########## Annotation Classes ##########

:Confidence a owl:Class ;
   rdfs:label "Confidence" ;
   rdfs:definition "A structure representing a system's confidence in something" .

:System a owl:Class ;
   rdfs:label "Confidence" ;
   rdfs:definition "A structure representing a system's confidence in something" .

:Justification a owl:Class ;
   rdfs:label "Justification" ;
   rdfs:definition "The evidence in a document/image/video/etc. for some KB assertion" .

:TextJustification a owl:Class ;
   rdfs:label "Text Justification" ;
   rdfs:definition "The evidence in a text document for some KB assertion" .

:AudioJustification a owl:Class ;
   rdfs:label "Audio Justification" ;
   rdfs:definition "The evidence in a speech or other audio for some KB assertion" .

:ImageJustification a owl:Class ;
   rdfs:label "Image Justification" ;
   rdfs:definition "The evidence in an image for some KB assertion" .

:KeyFrameVideoJustification a owl:Class ;
   rdfs:label "Video Key Frame Justification" ;
   rdfs:definition "The evidence from a key frame of a video for some KB assertion" .

:ShotVideoJustification a owl:Class ;
   rdfs:label "Video Non-Key-Frame Justification" ;
   rdfs:definition "The evidence in a video outside a key frame for some KB assertion" .

:BoundingBox a owl:Class ;
   rdfs:label "Bounding Box" ;
   rdfs:definition "Bounding box used to define image and video justifications" .

:MutualExclusion a owl:Class ;
   rdfs:label "Mutual Exclusion Constraint" ;
   rdfs:definition "Marks a set of assertions or objects as mutually exclusive" .

:MutualExclusionAlternative a owl:Class ;
   rdfs:label "Mutual Exclusion Alternative" ;
   rdfs:definition "One of the mutually exclusive alternatives of a mutual exclusion constraint" .

:PrivateData a owl:Class ;
   rdfs:label "Private Data" ;
   rdfs:definition "System-specific private data for debugging, etc." .

:LinkAssertion a owl:Class ;
   rdfs:label "Link Assertion" ;
   rdfs:definition "Represents the claim that an entity or event is the same as the prototype of a cluster".

:CompoundJustification a owl:Class ;
    rdfs:label "Compound Justification" ;
    rdfs:definition "Represents justification consisting of several other justifications" .

:ClusterMembership a owl:Class ;
    rdfs:label "Cluster Membership" ;
    rdfs:definition "Specifies that a cluster member is part of a cluster" .

:JustificationTypes a owl:Class ;
    rdfs:label "Jutification Types"^^xsd:string ;
    rdfs:comment "Convenience class to represent all justification types"^^xsd:string ;
    owl:unionOf (
        :TextJustification
        :ImageJustification
        :AudioJustification
        :KeyFrameVideoJustification
        :ShotVideoJustification ) .

#################################################################
#        Properties
#################################################################

:alternativeGraph rdf:type owl:ObjectProperty ;
  rdfs:domain :MutualExclusionAlternative ;
  rdfs:label "alternate graph"^^xsd:string ;
  rdfs:range :Subgraph ;
  rdfs:subPropertyOf owl:topObjectProperty ; .

:alternative rdf:type owl:ObjectProperty ;
  rdfs:domain [
      rdf:type owl:Class ;
      owl:unionOf (
          :MutualExclusion
          :Hypothesis
        ) ;
    ] ;
  rdfs:label "alternative"^^xsd:string ;
  rdfs:range :MutualExclusionAlternative ;
  rdfs:subPropertyOf owl:topObjectProperty ; .

:cluster rdf:type owl:ObjectProperty ;
  rdfs:domain :ClusterMember ;
  rdfs:label "cluster"^^xsd:string ;
  rdfs:range :SameAsCluster ;
  rdfs:subPropertyOf owl:topObjectProperty ; .

:confidence rdf:type owl:ObjectProperty ;
  rdfs:label "confidence"^^xsd:string ;
  rdfs:range :Confidence ;
  rdfs:subPropertyOf owl:topObjectProperty ; .

:confidenceValue rdf:type owl:DatatypeProperty ;
  rdfs:comment "Confidence instances might have numerical values associated with them, such as probabilities or likliehoods."^^xsd:string ;
  rdfs:domain :Confidence ;
  rdfs:label "value"^^xsd:string ;
  rdfs:range xsd:float ;
  rdfs:subPropertyOf owl:topDataProperty ; .

:member rdf:type owl:ObjectProperty ;
  rdfs:label "member"^^xsd:string ;
  rdfs:subPropertyOf owl:topObjectProperty ; .

:prototype rdf:type owl:ObjectProperty ;
  rdfs:domain :SameAsCluster ;
  rdfs:label "prototypical member"^^xsd:string ;
  rdfs:subPropertyOf owl:topObjectProperty ; .

:subgraphContains rdf:type owl:ObjectProperty ;
  rdfs:label "contains assertion"^^xsd:string ;
  rdfs:domain :Subgraph ;
  rdfs:range rdf:Statement ;
  rdfs:subPropertyOf owl:topObjectProperty ; .



:system rdf:type owl:ObjectProperty ;
  rdfs:label "Performer system id"^^xsd:string ;
  rdfs:range :System ;
  rdfs:subPropertyOf owl:topObjectProperty; .                                ## Not sure about this

:hasName rdf:type owl:DataTypeProperty ;
  rdfs:comment "Proper name for entity/filler of PER,ORG,GPE,FAC,LOC,WEA,VEH,LAW"^^xsd:string ;
  rdfs:range xsd:string ;
  rdfs:subPropertyOf owl:topDataProperty .

:textValue rdf:type owl:DataTypeProperty ;
  rdfs:comment "value for certain filler of RES,URL,TME,MON"^^xsd:string ;
  rdfs:range xsd:string ;
  rdfs:subPropertyOf owl:topDataProperty .

:numericValue rdf:type owl:DataTypeProperty ;
  rdfs:label "value for filler VAL,AGE" ;
  rdfs:domain aidaDomainCommon:Entity ;
  rdfs:range [
        rdf:type owl:Class ;
        owl:unionOf (
            xsd:string
            xsd:float
            xsd:double ) ] ;
  rdfs:subPropertyOf owl:topDataProperty .

:justifiedBy rdf:type owl:ObjectProperty ;
  rdfs:label "Pointer to source that justifies the assertion" ;
  rdfs:range [
    rdf:type owl:Class ;
    owl:unionOf (
      :JustificationTypes
      :CompoundJustification ) ] ;
  rdfs:subPropertyOf owl:topObjectProperty .

:containedJustification rdf:type owl:ObjectProperty ;
  rdfs:label "contained justification"^^xsd:string ;
  rdfs:comment "Specify which justifications are contained in a Compound Justification"^^xsd:string ;
  rdfs:domain :CompoundJustification ;
  rdfs:range :JustificationTypes ;
  rdfs:subPropertyOf owl:topObjectProperty .

:source rdf:type owl:DataTypeProperty ;
  rdfs:label "source"^^xsd:string ;
  rdfs:comment "Specify xsd:string identifier for source of justification"^^xsd:string ;
  rdfs:domain :JustificationTypes ;
  rdfs:range xsd:string ;
  rdfssubPropertyOf owl:topDataProperty .

:startOffset rdf:type owl:DataTypeProperty ;
  rdfs:label "start offset"^^xsd:string ;
  rdfs:comment "Indicate the beginning of a text span"^^xsd:string ;
  rdfs:domain :TextJustification ;
  rdfs:range xsd:int;
  rdfs:subPropertyOf owl:topDataProperty .

:endOffsetInclusive rdf:type owl:DataTypeProperty ;
  rdfs:label "end offset inclusive"^^xsd:string ;
  rdfs:comment "Indicate the end of a text span. The offset is included in the span"^^xsd:string ;
  rdfs:domain :TextJustification ;
  rdfs:range xsd:int;
  rdfs:subPropertyOf owl:topDataProperty .

:startTimestamp rdf:type owl:DataTypeProperty ;
  rdfs:label "start timestamp"^^xsd:string ;
  rdfs:comment "Indicate the beginning of an audio span"^^xsd:string ;
  rdfs:domain :AudioJustification ;
  rdfs:range xsd:double ;
  rdfs:subPropertyOf owl:topDataProperty .

:endTimestamp rdf:type owl:DataTypeProperty ;
  rdfs:label "end timestamp"^^xsd:string ;
  rdfs:comment "Indicate the end of an audio span"^^xsd:string ;
  rdfs:domain :AudioJustification ;
  rdfs:range xsd:double ;
  rdfs:subPropertyOf owl:topDataProperty .

:boundingBox rdf:type owl:ObjectProperty ;
  rdfs:label "bounding box"^^xsd:string ;
  rdfs:comment "Indicate that subject of this property uses the object of this property as a bounding box"^^xsd:string ;
  rdfs:domain [
      rdf:type owl:Class ;
      owl:unionOf (
        :ImageJustificationShape
        :KeyFrameVideoJustificationShape ) ] ;
  rdfs:range :BoundingBox ;
  rdfs:subPropertyOf owl:topObjectProperty .

:boundingBoxUpperLeftX rdf:type owl:DataTypeProperty ;
  rdfs:label "bounding box upper left x"^^xsd:string ;
  rdfs:comment "Indicate the x value of the upper left-hand point of the bounding box"^^xsd:string ;
  rdfs:domain :BoundingBox;
  rdfs:range xsd:int;
  rdfs:subPropertyOf owl:topDataProperty .

:boundingBoxUpperLeftY rdf:type owl:DataTypeProperty ;
  rdfs:label "bounding box upper left y"^^xsd:string ;
  rdfs:comment "Indicate the y value of the upper left-hand point of the bounding box"^^xsd:string ;
  rdfs:domain :BoundingBox;
  rdfs:range xsd:int;
  rdfs:subPropertyOf owl:topDataProperty .

:boundingBoxLowerRightX rdf:type owl:DataTypeProperty ;
  rdfs:label "bounding box lower right x"^^xsd:string ;
  rdfs:comment "Indicate the x value of the lower right-hand point of the bounding box"^^xsd:string ;
  rdfs:domain :BoundingBox;
  rdfs:range xsd:int;
  rdfs:subPropertyOf owl:topDataProperty .

:boundingBoxLowerRightY rdf:type owl:DataTypeProperty ;
  rdfs:label "bounding box lower right y"^^xsd:string ;
  rdfs:comment "Indicate the y value of the lower right-hand point of the bounding box"^^xsd:string ;
  rdfs:domain :BoundingBox;
  rdfs:range xsd:int;
  rdfs:subPropertyOf owl:topDataProperty .

:keyFrame rdf:type owl:DataTypeProperty ;
  rdfs:label "key frame"^^xsd:string ;
  rdfs:comment "Indicate the key frame of for a video justification"^^xsd:string ;
  rdfs:domain :KeyFrameVideoJustification ;
  rdfs:range xsd:string;
  rdfs:subPropertyOf owl:topDataProperty .
