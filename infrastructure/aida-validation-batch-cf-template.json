{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creates an AIF Validation AWS Batch environment",
    "Outputs": {
        "BatchComputeEnvironment": {
            "Value": {
                "Ref": "BatchComputeEnvironment"
            }
        },
        "BatchSecurityGroup": {
            "Value": {
                "Ref": "BatchSecurityGroup"
            }
        },
        "JobQueue": {
            "Value": {
                "Ref": "BatchJobQueue"
            }
        },
        "JobDefinition": {
            "Value": {
                "Ref": "BatchJobDefinition"
            }
        },
        "BatchInstanceRole": {
            "Value": {
                "Ref": "BatchInstanceRole"
            }
        },
        "BatchServiceRole": {
            "Value": {
                "Ref": "BatchServiceRole"
            }
        },
        "BatchTaskRole": {
            "Value": {
                "Ref": "BatchTaskRole"
            }
        }
    },
    "Parameters": {
        "Release": {
            "Type": "String",
            "Description": "Release Identifier",
            "Default": "develop"
        },
        "ComputeEnvironment": {
            "Type": "String",
            "Description": "Environment Name",
            "Default": "aida-validation-cf-compute"
        },
        "ComputeEnvironmentMaxVCpus": {
            "Type": "Number",
            "Description": "The maximum number of vcpus for the compute environment.",
            "Default": 5
        },
        "ComputeEnviornmentMinVCpus": {
            "Type": "Number",
            "Description": "The minimum number of vcpus for the compute environment.",
            "Default": 0
        },
        "ComputeEnvironmentDesiredVCpus": {
            "Type": "Number",
            "Description": "The desired number of vcpus for the compute environment.",
            "Default": 0
        },
        "ComputeNodes": {
            "Type": "Number",
            "Description": "The total number for nodes for the validation batch job.",
            "Default": 2
        },
        "MainNodeRange": {
            "Type": "String",
            "Description": "The target node range for the main node (i.e. 0:0).",
            "Default": "0:0"
        },
        "MainNodeMemory": {
            "Type": "Number",
            "Description": "The amount of memory for the main node (i.e. 2048).",
            "Default": 2048
        },
        "MainNodeVpcus": {
            "Type": "Number",
            "Description": "The number of Vpcus for the main node (i.e. 2).",
            "Default": 2
        },
        "WorkerNodeRange": {
            "Type": "String",
            "Description": "The target node range for the main node (i.e. 0:0).",
            "Default": "1:1"
        },
        "WorkerNodeMemory": {
            "Type": "Number",
            "Description": "The amount of memory for the worker nodes (i.e. 2048).",
            "Default": 2048
        },
        "MainNodeVpcus": {
            "Type": "Number",
            "Description": "The number of Vpcus for the main nodes (i.e. 2).",
            "Default": 2
        },
        "WorkerNodeVpcus": {
            "Type": "Number",
            "Description": "The number of Vpcus for the worker nodes (i.e. 2).",
            "Default": 2
        },
        "JobQueueName": {
            "Type": "String",
            "Description": "Name of the Queue to be created",
            "Default": "aida-validation-cf-queue"
        },
        "JobQueuePriority": {
            "Type": "Number",
            "Description": "The priority of the job queue.",
            "Default": 1
        },
        "JobDefinitionName": {
            "Type": "String",
            "Description": "Name of the Job Definition to be created",
            "Default": "aida-validation-cf-job"
        },
        "Ec2KeyPair": {
            "Type": "AWS::EC2::KeyPair::KeyName",
            "Description": "Ec2KeyPair to use for Compute Environment",
            "Default": "AIDA-All"
        },
        "MainEc2InstanceType": {
            "Type": "String",
            "Description": "The EC2 instance type for the main node",
            "Default": "m4.large"
        },
        "WorkerEc2InstanceType": {
            "Type": "String",
            "Description": "The EC2 instance type for the worker node",
            "Default": "m4.large"
        },
        "MainContainerImage": {
            "Type": "String",
            "Description": "The location of the main container image",
            "Default": "606941321404.dkr.ecr.us-east-1.amazonaws.com/batch-main:latest"
        },
        "WorkerContainerImage": {
            "Type": "String",
            "Description": "The location of the main container image",
            "Default": "606941321404.dkr.ecr.us-east-1.amazonaws.com/batch-worker:latest"
        },
        "EnvS3SubmissionArchive": {
            "Type": "String",
            "Description": "The S3 tar.gz, .tgz, .zip object to validate",
            "Default": "aida-validation/test.zip"
        },
        "EnvS3ValidationBucket": {
            "Type": "String",
            "Description": "The S3 bucket that will contain all validation output",
            "Default": "aida-validation"
        },
        "EnvMainLogLevel": {
            "Type": "String",
            "Description": "The log level for the main node",
            "Default": "INFO"
        },
        "EnvMainSleepInterval": {
            "Type": "String",
            "Description": "The number of seconds to wait before checking if all worker jobs have completed",
            "Default": "60"
        },
        "EnvAwsDefaultRegion": {
            "Type": "String",
            "Description": "The default region to use when calling aws services",
            "Default": "us-east-1"
        },
        "EnvWorkerLogLevel": {
            "Type": "String",
            "Description": "The log level for the worker nodes",
            "Default": "INFO"
        },
        "EnvQueueInitTimeout": {
            "Type": "String",
            "Description": "The number of seconds to wait for the SQS queue to initialize",
            "Default": "120"
        },
        "EnvValidationTimeout": {
            "Type": "String",
            "Description": "The number of seconds to wait for a single validation to complete before timing out",
            "Default": "28880"
        }
    },
    "Resources": {
        "BatchComputeEnvironment": {
            "Type": "AWS::Batch::ComputeEnvironment",
            "Properties": {
                "ComputeEnvironmentName" : {
                    "Ref": "ComputeEnvironment"
                },
                "ComputeResources": {
                    "DesiredvCpus": {
                        "Ref": "ComputeEnvironmentDesiredVCpus"
                    },
                    "InstanceRole": {
                        "Ref": "BatchInstanceProfile"
                    },
                    "InstanceTypes": [
                        "m4.large"
                    ],
                    "MaxvCpus": {
                        "Ref": "ComputeEnvironmentMaxVCpus"
                    },
                    "MinvCpus": {
                        "Ref": "ComputeEnviornmentMinVCpus"
                    },
                    "SecurityGroupIds": [
                        {
                            "Fn::GetAtt": [
                                "BatchSecurityGroup",
                                "GroupId"
                            ]
                        }
                    ],
                    "Subnets": [{
                            "Fn::Join" : [ 
                                ",", 
                                [
                                    { "Fn::ImportValue": "aida-validation-private-subnet-a" },
                                    { "Fn::ImportValue": "aida-validation-private-subnet-b" },
                                    { "Fn::ImportValue": "aida-validation-private-subnet-c" },
                                    { "Fn::ImportValue": "aida-validation-private-subnet-d" },
                                    { "Fn::ImportValue": "aida-validation-private-subnet-e" },
                                    { "Fn::ImportValue": "aida-validation-private-subnet-f" }
                                ]
                            ]
                    }]
                    ,
                    "Tags": {
                        "Name": "aida-batch-compute-environment",
                        "Project": "AIDA"
                    },
                    "Ec2KeyPair": {
                        "Ref": "Ec2KeyPair"
                    },
                    "Type": "EC2"
                },
                "ServiceRole": {
                    "Ref": "BatchServiceRole"
                },
                "State": "Enabled",
                "Type": "MANAGED"
            }
        },
        "BatchInstanceProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
                "Path": "/",
                "Roles": [
                    {
                        "Ref": "BatchInstanceRole"
                    }
                ]
            }
        },
        "BatchInstanceRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            }
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AmazonS3FullAccess",
                    "arn:aws:iam::aws:policy/AmazonSQSFullAccess",
                    "arn:aws:iam::aws:policy/AWSBatchFullAccess",
                    "arn:aws:iam::aws:policy/service-role/AmazonEC2ContainerServiceforEC2Role"
                ],
                "Path": "/",
                "Policies": [
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "BatchTaskRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "ecs-tasks.amazonaws.com"
                            }
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AmazonS3FullAccess",
                    "arn:aws:iam::aws:policy/AmazonSQSFullAccess",
                    "arn:aws:iam::aws:policy/AWSBatchFullAccess"
                ],
                "Path": "/",
                "Policies": [
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "BatchServiceRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "batch.amazonaws.com"
                                ]
                            }
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AWSBatchServiceRole"
                ],
                "Path": "/",
                "Policies": []
            },
            "Type": "AWS::IAM::Role"
        },
        "BatchSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Enable access to Batch instances",
                "SecurityGroupEgress": {
                    "CidrIp": "0.0.0.0/0",
                    "IpProtocol": "-1"
                },
                "SecurityGroupIngress": {
                    "CidrIp": {
                        "Fn::ImportValue": "aida-validation-vpc-cidr"
                    },
                    "IpProtocol": "tcp",
                    "FromPort": "22",
                    "ToPort": "22"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "aida-validation-batch-sg"
                    }
                ],
                "VpcId": {
                    "Fn::ImportValue": "aida-validation-vpc-id"
                }
            }
        },
        "BatchJobQueue": {
            "Type": "AWS::Batch::JobQueue",
            "Properties": {
                "ComputeEnvironmentOrder": [
                    {
                        "ComputeEnvironment": {
                            "Ref": "BatchComputeEnvironment"
                        },
                        "Order": 1
                    }
                ],
                "JobQueueName": {
                    "Ref": "JobQueueName"
                },
                "Priority": {
                    "Ref": "JobQueuePriority"
                },
                "State": "ENABLED"
            },
            "DependsOn": "BatchComputeEnvironment"
        },
        "BatchJobDefinition": {
            "Type" : "AWS::Batch::JobDefinition",
            "Properties" : {
                "JobDefinitionName" : {
                    "Ref": "JobDefinitionName"
                },
                "Parameters": {},
                "RetryStrategy": {
                    "Attempts": 1
                },
                "NodeProperties": {
                    "MainNode": 0,
                    "NumNodes": {
                        "Ref": "ComputeNodes"
                    },
                    "NodeRangeProperties": [
                        {
                            "TargetNodes": {
                                "Ref": "MainNodeRange"
                            },
                            "Container": {
                                "Command" : [],
                                "Environment":  [
                                    { 
                                        "Name": "S3_SUBMISSION_ARCHIVE",
                                        "Value": { "Ref": "EnvS3SubmissionArchive" }
                                    },
                                    {
                                        "Name": "S3_VALIDATION_BUCKET",
                                        "Value": { "Ref": "EnvS3ValidationBucket" }
                                    },
                                    {
                                        "Name": "MAIN_LOG_LEVEL",
                                        "Value": { "Ref": "EnvMainLogLevel" }
                                    },
                                    {
                                        "Name": "AWS_DEFAULT_REGION",
                                        "Value": { "Ref": "EnvAwsDefaultRegion" }
                                    },
                                    {
                                        "Name": "MAIN_SLEEP_INTERVAL",
                                        "Value": { "Ref": "EnvMainSleepInterval" }
                                    }
                                ],
                                "Image" : {
                                    "Ref": "MainContainerImage"
                                },
                                "InstanceType" : {
                                    "Ref": "MainEc2InstanceType"
                                },
                                "JobRoleArn" : {
                                    "Ref": "BatchTaskRole"
                                },
                                "Memory" : {
                                    "Ref": "MainNodeMemory"
                                },
                                "MountPoints" : [],
                                "Privileged" : "True",
                                "ReadonlyRootFilesystem" : "False",
                                "ResourceRequirements" : [],
                                "Ulimits" : [],
                                "Vcpus" : {
                                    "Ref": "MainNodeVpcus"
                                },
                                "Volumes" : []
                            }
                        },
                        {
                            "TargetNodes": {
                                "Ref": "WorkerNodeRange"
                            },
                            "Container": {
                                "Command" : [],
                                "Environment":  [
                                    { 
                                        "Name": "QUEUE_INIT_TIMEOUT",
                                        "Value": { "Ref": "EnvQueueInitTimeout" }
                                    },
                                    {
                                        "Name": "VALIDATION_TIMEOUT",
                                        "Value": { "Ref": "EnvValidationTimeout" }
                                    },
                                    {
                                        "Name": "S3_VALIDATION_BUCKET",
                                        "Value": { "Ref": "EnvS3ValidationBucket" }
                                    },
                                    {
                                        "Name": "WORKER_LOG_LEVEL",
                                        "Value": { "Ref": "EnvWorkerLogLevel" }
                                    }
                                ],
                                "Image" : {
                                    "Ref": "WorkerContainerImage"
                                },
                                "InstanceType" : {
                                    "Ref": "WorkerEc2InstanceType"
                                },
                                "JobRoleArn" : {
                                    "Ref": "BatchTaskRole"
                                },
                                "Memory" : {
                                    "Ref": "WorkerNodeMemory"
                                },
                                "MountPoints" : [],
                                "Privileged" : "True",
                                "ReadonlyRootFilesystem" : "False",
                                "ResourceRequirements" : [],
                                "Ulimits" : [],
                                "Vcpus" : {
                                    "Ref": "WorkerNodeVpcus"
                                },
                                "Volumes" : []
                            }
                        }
                    ]
                },
                "Type" : "multinode"
            }
        }
    }
}
